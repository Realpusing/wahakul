<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tabelkuning2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/tabelkuning">


    </ImageView>
    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"

        android:layout_marginTop="21dp"
        android:src="@drawable/arrow">


    </ImageView>
    <ImageView
        android:id="@+id/wakul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/logowakul">


    </ImageView>

    <ImageView
        android:id="@+id/latarputih2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="157dp"
        android:src="@drawable/bawahan"

        >

    </ImageView>

    <ImageView
        android:id="@+id/textdaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="173dp"
        android:layout_marginTop="190dp"
        android:src="@drawable/daftar"


        >

    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/latarputih2"
        android:layout_marginTop="-460dp"
        android:orientation="vertical"
        android:padding="2dp">

        <EditText
            android:id="@+id/masukan_nama2"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginLeft="33dp"
            android:background="@drawable/border"
            android:hint="Masukan Nama Pengguna"
            android:paddingLeft="10dp">


        </EditText>

        <EditText
            android:id="@+id/masukan_email2"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:hint="Masukan Akun google "

            android:paddingLeft="10dp">


        </EditText>

        <EditText
            android:id="@+id/masukan_password2"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:hint="Password"
            android:paddingLeft="10dp">


        </EditText>

        <Button
            android:id="@+id/buton_daftar"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/buttoncolor"
            android:text="Daftar"
            android:textSize="18sp"

            ></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="0dp"
            android:minHeight="48dp"
            android:id="@+id/masuk_akun"
            android:text="Sudah Punya akun? Masuk"
            android:textColor="@color/blue"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck">

        </TextView>



    </LinearLayout>


</RelativeLayout>





